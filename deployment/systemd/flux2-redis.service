[Unit]
Description=FLUX.2 Redis Cache Service
After=network.target

[Service]
Type=simple
User=flux2
Group=flux2
WorkingDirectory=/opt/flux2
ExecStart=/opt/flux2/.venv/bin/redis-server /opt/flux2/config/redis/redis.conf
Restart=on-failure
RestartSec=5
StandardOutput=journal
StandardError=journal
SyslogIdentifier=flux2-redis

[Install]
WantedBy=multi-user.target
