[Unit]
Description=FLUX.2 Nginx Load Balancer
After=network.target
Wants=flux2.service

[Service]
Type=forking
User=root
PIDFile=/var/run/nginx.pid
ExecStartPre=/usr/sbin/nginx -t -c /opt/flux2/config/nginx/flux2.conf
ExecStart=/usr/sbin/nginx -c /opt/flux2/config/nginx/flux2.conf
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s QUIT $MAINPID
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
